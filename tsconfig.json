{
  "compilerOptions": {
    "strict": true,
    "target": "es5",  // <-- here!
    "module": "commonjs",
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "lib": [
      "es5",
      "dom"
    ],
    "rootDir": "src",
    "moduleResolution": "node" 
  },
  

    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  
  
}